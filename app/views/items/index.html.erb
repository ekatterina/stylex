  <div class="container d-flex">
      <div class="row">
        <div class="col-md-6">
            <div class="cards">
            <% @items.each do |item| %>
              <%= render 'shared/card', item_within: item %>
            <% end %>
         </div>
      </div>

      <div class="col-md-6">
        <div id="map"
           style="width: 100%; height: 600px;"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
    </div>
  </div>
</div>
