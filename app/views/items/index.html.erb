<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.user.email %></td>
        <td><%= item.category %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'Show', item %></td>
        <!-- current_user == item.user -->
        <% if policy(item).edit?  %>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
