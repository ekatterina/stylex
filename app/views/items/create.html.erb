<div class="container">
  <%= form_for(@item) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :price %>
    <%= f.number_field :price %>
    <%= f.label :size %>
    <%= f.text_field :size %>
    <%= f.label :color %>
    <%= f.color_field :color %>
    <%= f.label :category %>
    <%= f.text_field :category %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :pickup_location %>
    <%= f.text_field :pickup_location %>
    <%= f.submit %>
  <% end %>
</div>
