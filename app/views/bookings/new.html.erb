<div class="container" style='width: 1000px'>
	<h1>Borrow this style</h1>
	<div class="container d-flex pl-0">
		<div style='width: 320px; margin-right: 20px;' >
			<%= render 'form' %>
		</div>
		<div style='width: 320px; margin-right: 20px;'>
			<p>Details</p>
			<ul  class="list-group" style='list-style: none'>
				<li><strong>Title </strong><%= @item.title %></li>
				<li><strong>Price </strong><%= @item.price %></li>
				<li><strong>Color </strong><%= @item.color %></li>
				<li><strong>Size </strong><%= @item.size %></li>
				<li><strong>Location </strong><%= @item.pickup_location %></li>
			</ul>
		</div>
	</div>
	<%#= link_to 'Go back to Item', item_path(@booking.item) %>
</div>