<div class="container">
	<h1>Congratulations you've just borrowed a style!</h1>
	<br>
	<div class="d-flex">
		<div>
			<%= cl_image_tag @booking.item.style_photo.key, height: 320, crop: :fill, :style =>'object-fit: cover; object-position: center top; margin-right: 20px;' %>
		</div>
		<div style='flex-grow: 1;'>
			<div id="map"
        style="height: 320px; position: relative"
        data-markers="<%= @coordinates.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
		</div>
	</div>
	<div class="container px-0">
		<div class="row">
			<div class="col-6 mt-3">
				<h2>Details of borrowed style</h2>
				<ul  class="list-group" style='list-style: none'>
					<li>Title: <%= @booking.item.title %></li>
					<li>Price: <%= @booking.item.price %></li>
					<li>Color: <%= @booking.item.color %></li>
					<li>Size: <%= @booking.item.size %></li>
					<li>Location: <%= @booking.item.pickup_location %></li>
					<br>
					<li>Start Date: </strong><%= @booking.start_date.to_s[0,10] %></li>
					<li>End Date: </strong><%= @booking.end_date.to_s[0,10] %></li>
				</ul>
			</div>
			<div class="col-6 mt-3">
				<h2>Contact the style owner</h2>
				<div class="d-flex justify-content-between align-items-start">
					<div class="d-flex align-items-center">
						<%= cl_image_tag(@booking.item.user.photo.key, :width => '50px', :class => 'rounded-circle mr-3') %>
						<p>Hi, i'm <%= @booking.item.user.first_name %> <%= @booking.item.user.last_name %>!</p>
					</div>
					<%= mail_to @booking.item.user.email, "Email Me", :class => 'btn btn-primary' %>
				</div>
			</div>
		</div>
	<br>
	<%= link_to 'Back to the item', item_path(@booking.item_id)%>
	</div>
</div>
